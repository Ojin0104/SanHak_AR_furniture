<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="474dp"
        android:layout_height="match_parent">


        <ImageView

            android:id="@+id/imageView"
            android:layout_width="125dp"
            android:layout_height="118dp"
            android:layout_marginStart="16dp"

            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"

            android:text="상품이름"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"

            android:layout_marginTop="8dp"
            android:text="상품최저가"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_name" />

        <TextView
            android:id="@+id/item_link1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:text="링크"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/item_price1"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="50dp"

            android:layout_marginTop="16dp"
            android:text="가격"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/item_link1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_link2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:text="링크"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/item_price1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/item_link1" />

        <TextView
            android:id="@+id/item_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="48dp"

            android:layout_marginTop="12dp"
            android:text="가격"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/item_link1"
            app:layout_constraintTop_toBottomOf="@+id/item_price1" />

        <TextView
            android:id="@+id/item_link3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:text="링크"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/item_price1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/item_link2" />

        <TextView
            android:id="@+id/item_price3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="48dp"

            android:layout_marginTop="15dp"
            android:text="가격"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/item_link1"
            app:layout_constraintTop_toBottomOf="@+id/item_price2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>