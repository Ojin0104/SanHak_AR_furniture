<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="474dp"
        android:layout_height="match_parent">


        <ImageView

            android:id="@+id/zzim_img"
            android:layout_width="125dp"
            android:layout_height="118dp"
            android:layout_marginStart="16dp"

            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/zzim_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="35dp"
            android:layout_marginTop="28dp"
            android:text="상품이름"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/zzim_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/zzim_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="35dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="44dp"
            android:text="가격"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/zzim_img"
            app:layout_constraintTop_toBottomOf="@+id/zzim_name" />

        <Button
            android:id="@+id/zzim_delete"
            android:layout_width="66dp"
            android:layout_height="41dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="102dp"
            android:layout_marginBottom="9dp"
            android:backgroundTint="#90B1B4C8"
            android:text="제거"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/zzim_price"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>